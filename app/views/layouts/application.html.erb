<!DOCTYPE html>
<html>
  <head>
    <title>Sweat Workout Studio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar" role="navigation">
      <div class="navbar-header">Welcome to Sweat Workout Studio</div>
        <div class="container">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          </button>
        <a class="navbar-brand" href="<%= root_path %>">Home</a>
        <a class="navbar-brand" href="<%= new_student_path %>">Register</a>
        <% if session[:student_id] %>
          <a class="navbar-brand" <%= link_to 'Update my information', edit_student_path(session[:student_id]) %> ></a>
        <% else %>
          <a class="navbar-brand" <%= link_to 'Log in', login_path %> ></a>
        <% end %>
        <a class="navbar-brand" <%= link_to 'Log out', logout_path, method: :delete if session[:student_id] %> ></a>
        </div>
    </div>

    <!-- content -->
    <div class="container"  role="main">
      <%= yield %>
    </div>
  </body>
</html>
